{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": ["dom", "es2015", "es2017"],
      "declaration": true,
      "declarationDir": "./types",
      "outDir": "./dist",
      "rootDir": "./src",
      "jsx": "react",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "types/index.d.ts"]
}